<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Suite1" verbose="1" >
    <test name="Smoke" >

        <groups>
            <run>
                <include name="menu"></include>
                <exclude name="home"></exclude>
                <exclude name="feature"></exclude>
            </run>
        </groups>

        <classes>
            <class name="testcases.LoginTest" >
                <methods>
                    <exclude name="fillEmailAndPasswordFields"></exclude>
                    <exclude name="fillEmailAndPasswordFieldsAndValidateError"></exclude>
                </methods>
            </class>
            <class name="testcases.SignInTest"></class>
            <class name="testcases.AccountTest"></class>
        </classes>
    </test>

</suite>
